<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="petshops.developerpet.com.petshops.ShowDetails">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/back_to"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_left_blue" />
            <TextView
                android:id="@+id/textname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:text="Balaji's Pet Shop"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ratings"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rate_shope" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Open Hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:background="@drawable/bt_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="Week Days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/openDays"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/red2"
                android:text="9:22am - 11:22am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:background="@drawable/bt_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="WeeKends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/weekends"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/red2"
                android:text="9:22am - 11:22am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:background="@drawable/bt_shape"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="Distance from you "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/distance"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:text="5km away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:background="@drawable/bt_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="Address "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/address"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:gravity="end"
                android:text="janatha Nagar, Chania , India"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:background="@drawable/bt_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="5dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="Contact "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:id="@+id/callnow"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/contacts"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:text="+123123123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@android:drawable/stat_sys_phone_call"
                    android:layout_width="40dp"
                    android:scaleType="fitXY"
                    android:layout_height="30dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
