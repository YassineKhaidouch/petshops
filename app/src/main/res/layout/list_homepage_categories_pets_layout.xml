<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="130dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearlayout01"
            android:orientation="vertical"
            android:background="@drawable/bt_shape_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="1dp"
                android:src="@android:mipmap/sym_def_app_icon"
                android:scaleType="fitXY"
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/linearlayout01">
            <TextView
                android:layout_above="@+id/rating_bar"
                android:layout_alignParentTop="true"
                android:id="@+id/dataCategories"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <RatingBar
                android:layout_alignParentBottom="true"
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:progressTint="@color/colorAccent"
                android:rating="0"
                style="@style/Widget.AppCompat.RatingBar.Small"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/edit_delete"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/editpost"
                    android:src="@drawable/icons_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
               <ImageView
                   android:id="@+id/deletepost"
                   android:src="@drawable/iconsdelete"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
            </LinearLayout>
             </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>