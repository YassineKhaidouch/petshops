<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="10dp"
            android:background="@drawable/bt_shape"
            android:gravity="center|top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="20dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="PAPP is free to use till 31st May 2018"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/currentPlan"
                android:scaleType="fitXY"
                android:src="@mipmap/pay_month1"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:background="@drawable/bt_shape"
            android:gravity="center|top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:textColor="@color/blue"
                android:textSize="22sp"
                android:id="@+id/upgradePlan"
                android:text="Upgrade Plan"
                android:drawableLeft="@drawable/upgradeplan"
                android:layout_width="wrap_content"
                android:layout_height="60dp" />
            <LinearLayout
                android:layout_margin="10dp"
                android:gravity="center|top"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center|top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/pay_month1"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <ImageView
                    android:id="@+id/image1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pay_month3"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
              </LinearLayout>
                <LinearLayout
                    android:gravity="center|top"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image2"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pay_month6"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <ImageView
                    android:id="@+id/image3"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pay_month12"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

</android.support.v7.widget.CardView>
